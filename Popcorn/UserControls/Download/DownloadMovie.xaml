<UserControl x:Class="Popcorn.UserControls.Download.DownloadMovie"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:Popcorn.Converters"
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             mc:Ignorable="d" 
             DataContext="{Binding }"
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="128*"/>
            <RowDefinition Height="114*"/>
            <RowDefinition Height="92*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="114*"/>
            <RowDefinition Height="128*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="LoadingText"
                   FontSize="18"
                   Text="{Binding DownloadText}"
                   Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <controls:MetroProgressBar x:Name="LoadingProgressBar"
                                   Minimum="0.0"
                                   Maximum="2.0"
                                   Value="{Binding DownloadProgress}"
                                   Foreground="{DynamicResource AccentColorBrush}"
                                   VerticalAlignment="Center" 
                                   Grid.Column="1" 
                                   Grid.Row="3" 
                                   Margin="0" 
                                   Grid.ColumnSpan="3"
                                   Height="7"
                                   Visibility="{Binding IsMovieBuffered, Converter={StaticResource BoolToVisibilityConverter}}"/>
        <Button x:Name="StopLoadingMovieButton"
                Content="{lex:LocText CancelButton}"
                Command="{Binding StopPlayingMovieCommand}" Margin="0" Grid.Row="7" Grid.Column="2" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
