<UserControl x:Class="Popcorn.UserControls.Tabs.SeenMovies"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:custompanels="clr-namespace:Popcorn.Panels"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             xmlns:converters="clr-namespace:Popcorn.Converters"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:tabs="clr-namespace:Popcorn.UserControls.Tabs"
             xmlns:customControls="clr-namespace:Popcorn.Controls"
             xmlns:tabsViewModels="clr-namespace:Popcorn.ViewModels.Tabs"
             lex:LocalizeDictionary.DesignCulture="en"
             lex:ResxLocalizationProvider.DefaultAssembly="Popcorn"
             lex:ResxLocalizationProvider.DefaultDictionary="Resources"
             d:DataContext="{d:DesignInstance tabsViewModels:SeenTabViewModel}">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="LargeTileStyle" TargetType="controls:Tile">
                <Setter Property="Width" Value="200" />
                <Setter Property="Height" Value="300" />
                <Setter Property="TitleFontSize" Value="14" />
            </Style>

            <converters:UriToCachedImageConverter x:Key="UriToCachedImageConverter" />
            <converters:BoolToInverseVisibilityConverter x:Key="BoolToInverseVisibilityConverter"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:MultiBooleanToVisibilityConverter x:Key="MultiBooleanToVisibilityConverter"/>
            <converters:BoolToInverseBoolConverter x:Key="BoolToInverseBoolConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <controls:MetroProgressBar x:Name="LoadingProgressBar" 
                                    Grid.Row="0"
                                    IsIndeterminate="True"
                                    EllipseDiameter="5"
                                    Minimum="0"
                                    Maximum="100"
                                    Foreground="{DynamicResource AccentColorBrush}"
                                    Margin="0,10,0,10"
                                    Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Grid}, Path=ActualWidth, Mode=OneWay}">
            <controls:MetroProgressBar.Visibility>
                <MultiBinding Converter="{StaticResource MultiBooleanToVisibilityConverter}">
                    <Binding Path="Main.IsConnectionInError" Converter="{StaticResource BoolToInverseBoolConverter}" Source="{StaticResource Locator}" />
                    <Binding Path="IsLoadingMovies" />
                </MultiBinding>
            </controls:MetroProgressBar.Visibility>
        </controls:MetroProgressBar>
        <TextBlock Text="{lex:LocText EmptySearchLabel}" 
                   Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="36"
                   Foreground="#FF7D7D7D">
            <TextBlock.Visibility>
                <MultiBinding Converter="{StaticResource MultiBooleanToVisibilityConverter}">
                    <Binding Path="Main.IsConnectionInError" Converter="{StaticResource BoolToInverseBoolConverter}" Source="{StaticResource Locator}" />
                    <Binding Path="IsMovieFound" Converter="{StaticResource BoolToInverseBoolConverter}" />
                </MultiBinding>
            </TextBlock.Visibility>
        </TextBlock>
        <Button Width="140"
                Height="40"
                Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="{lex:LocText ReloadLabel}"
                FontSize="18"
                Visibility="{Binding Main.IsConnectionInError, Converter={StaticResource BoolToInverseVisibilityConverter}, Source={StaticResource Locator}}"
                Command="{Binding ReloadMovies}"/>
        <ScrollViewer x:Name="Scroll" 
                      Grid.Row="1"
                      Grid.RowSpan="2"
                      VerticalScrollBarVisibility="Auto" 
                      Visibility="{Binding Main.IsConnectionInError, Converter={StaticResource BoolToVisibilityConverter}, Source={StaticResource Locator}}">
            <ItemsControl x:Name="ItemsList" 
                        VirtualizingStackPanel.IsVirtualizing="True"
                        VirtualizingStackPanel.VirtualizationMode="Recycling"
                        ItemsSource="{Binding Movies}" 
                        VerticalAlignment="Top">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,30"
                                    HorizontalAlignment="Left" 
                                    Orientation="Vertical">
                            <controls:Tile Style="{StaticResource LargeTileStyle}" 
                                        Command="{Binding MoviePage.LoadMovieCommand, Source={StaticResource Locator}}" 
                                        CommandParameter="{Binding }" 
                                        Background="#FF2F2F2F"
                                        Margin="0,0,0,5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"></RowDefinition>
                                        <RowDefinition Height="200"></RowDefinition>
                                        <RowDefinition Height="50"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="10"></ColumnDefinition>
                                        <ColumnDefinition Width="180"></ColumnDefinition>
                                        <ColumnDefinition Width="10"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Image  
                                        Grid.Row="0"
                                        Grid.RowSpan="3"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        x:Name="BackgroundImage"
                                        Source="{Binding CoverImagePath, Converter={StaticResource UriToCachedImageConverter}}" 
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                                    <customControls:Rating 
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        x:Name="Rating"
                                        Width="60" 
                                        HorizontalAlignment="Left" 
                                        VerticalAlignment="Center" 
                                        RatingValue="{Binding RatingValue}" 
                                        Opacity="0.0"
                                        StarButtonsEnabled="False"/>
                                    <Grid 
                                        Grid.Row="0"
                                        Grid.RowSpan="3"
                                        Grid.Column="1"
                                        x:Name="PlayCanvas"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Opacity="0.0">
                                        <Path Width="20.5832" 
                                            Height="31.6667" 
                                            Stretch="Fill" Fill="White" 
                                            Data="F1 M 30.0833,22.1667L 50.6665,37.6043L 50.6665,38.7918L 30.0833,53.8333L 30.0833,22.1667 Z "/>
                                        <Ellipse x:Name="PlayEllipse" 
                                                Width="60" 
                                                Height="60" 
                                                Stretch="Fill" 
                                                StrokeThickness="4" 
                                                StrokeLineJoin="Round" 
                                                Opacity=".6" 
                                                Stroke="#FFFFFF" 
                                                Fill="#00000000" />
                                    </Grid>

                                    <ToggleButton
                                        Grid.Row="2" 
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right"
                                        x:Name="Like"
                                        CommandParameter="{Binding }"
                                        Command="{Binding DataContext.SetFavoriteMovieCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type tabs:SeenMovies}}}"
                                        Width="50"
                                        Height="50"
                                        Opacity="0.0"
                                        IsChecked="{Binding IsFavorite}"
                                        Style="{DynamicResource MetroCircleToggleButtonStyle}">
                                        <Rectangle Width="20"
                                        Height="20"
                                        Fill="White">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Stretch="Fill">
                                                    <VisualBrush.Visual>
                                                        <Canvas x:Name="appbar_heart" 
                                                            Width="76" 
                                                            Height="76" 
                                                            Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                                                            <Path Width="33.4542" 
                                                                Height="28.4779" 
                                                                Canvas.Left="21.2717" 
                                                                Canvas.Top="25.733" 
                                                                Stretch="Fill" 
                                                                Fill="Red" 
                                                                Data="F1 M 52.2716,27.8072C 48.9356,24.164 42.0671,25.7204 38.0992,31.3618C 33.0737,25.3024 27.0713,24.164 23.7257,27.8072C 14.4142,37.9485 34.3451,52.5246 37.9599,54.1634L 38.0438,54.2109L 38.0438,54.1634C 41.6554,52.5246 61.5832,37.9485 52.2716,27.8072 Z "/>
                                                        </Canvas>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </ToggleButton>
                                    <Rectangle Width="21"
                                               Grid.Row="0" 
                                               Grid.Column="1"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               x:Name="Seen"
                                               Height="13"
                                               Opacity="0.0"
                                               Fill="White"
                                               Visibility="{Binding HasBeenSeen, Converter={StaticResource BoolToInverseVisibilityConverter}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_eye}"/>
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Grid.Triggers>
                                        <EventTrigger RoutedEvent="Grid.MouseEnter">
                                            <EventTrigger.Actions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation 
                                                        AutoReverse="False" 
                                                        Duration="0:0:01" 
                                                        AccelerationRatio="0.05"
                                                        DecelerationRatio="0.95"
                                                        From="1.0" To="0.4"
                                                        Storyboard.TargetName="BackgroundImage"
                                                        Storyboard.TargetProperty="Opacity"
                                                        FillBehavior="HoldEnd">
                                                        </DoubleAnimation>
                                                        <DoubleAnimation 
                                                        AutoReverse="False" 
                                                        Duration="0:0:01" 
                                                        AccelerationRatio="0.05"
                                                        DecelerationRatio="0.95"
                                                        From="0.0" To="1.0"
                                                        Storyboard.TargetName="PlayCanvas"
                                                        Storyboard.TargetProperty="Opacity"
                                                        FillBehavior="HoldEnd">
                                                        </DoubleAnimation>
                                                        <DoubleAnimation 
                                                        AutoReverse="False" 
                                                        Duration="0:0:01" 
                                                        AccelerationRatio="0.05"
                                                        DecelerationRatio="0.95"
                                                        From="0.0" To="1.0"
                                                        Storyboard.TargetName="Rating"
                                                        Storyboard.TargetProperty="Opacity"
                                                        FillBehavior="HoldEnd">
                                                        </DoubleAnimation>
                                                        <DoubleAnimation 
                                                        AutoReverse="False" 
                                                        Duration="0:0:01" 
                                                        AccelerationRatio="0.05"
                                                        DecelerationRatio="0.95"
                                                        From="0.0" To="1.0"
                                                        Storyboard.TargetName="Like"
                                                        Storyboard.TargetProperty="Opacity"
                                                        FillBehavior="HoldEnd">
                                                        </DoubleAnimation>
                                                        <DoubleAnimation 
                                                        AutoReverse="False" 
                                                        Duration="0:0:01" 
                                                        AccelerationRatio="0.05"
                                                        DecelerationRatio="0.95"
                                                        From="0.0" To="1.0"
                                                        Storyboard.TargetName="Seen"
                                                        Storyboard.TargetProperty="Opacity"
                                                        FillBehavior="HoldEnd">
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger.Actions>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="Grid.MouseLeave">
                                            <EventTrigger.Actions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation 
                                                        AutoReverse="False" 
                                                        AccelerationRatio="0.05"
                                                        DecelerationRatio="0.95"
                                                        From="1.0" To="1.0"
                                                        Storyboard.TargetName="BackgroundImage"
                                                        Storyboard.TargetProperty="Opacity">
                                                        </DoubleAnimation>
                                                        <DoubleAnimation 
                                                        AutoReverse="False" 
                                                        AccelerationRatio="0.05"
                                                        DecelerationRatio="0.95"
                                                        From="0.0" To="0.0"
                                                        Storyboard.TargetName="PlayCanvas"
                                                        Storyboard.TargetProperty="Opacity">
                                                        </DoubleAnimation>
                                                        <DoubleAnimation 
                                                        AutoReverse="False" 
                                                        AccelerationRatio="0.05"
                                                        DecelerationRatio="0.95"
                                                        From="0.0" To="0.0"
                                                        Storyboard.TargetName="Rating"
                                                        Storyboard.TargetProperty="Opacity">
                                                        </DoubleAnimation>
                                                        <DoubleAnimation 
                                                        AutoReverse="False" 
                                                        AccelerationRatio="0.05"
                                                        DecelerationRatio="0.95"
                                                        From="0.0" To="0.0"
                                                        Storyboard.TargetName="Like"
                                                        Storyboard.TargetProperty="Opacity">
                                                        </DoubleAnimation>
                                                        <DoubleAnimation 
                                                        AutoReverse="False" 
                                                        AccelerationRatio="0.05"
                                                        DecelerationRatio="0.95"
                                                        From="0.0" To="0.0"
                                                        Storyboard.TargetName="Seen"
                                                        Storyboard.TargetProperty="Opacity">
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger.Actions>
                                        </EventTrigger>
                                    </Grid.Triggers>
                                </Grid>
                            </controls:Tile>
                            <TextBlock Name="Title" 
                                       Text="{Binding Title}" 
                                       Width="200"
                                       TextTrimming="CharacterEllipsis" 
                                       FontSize="14" 
                                       HorizontalAlignment="Left"/>
                            <TextBlock TextTrimming="CharacterEllipsis"
                                       Foreground="Gray" 
                                       Width="200"
                                       FontSize="12" 
                                       HorizontalAlignment="Left">
                                <customControls:MovieGenres Genres="{Binding Genres}"/>
                            </TextBlock>
                            <TextBlock Text="{Binding Year}" 
                                       Foreground="Gray" 
                                       Width="200"
                                       HorizontalAlignment="Left" 
                                       FontSize="12"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <custompanels:ElasticWrapPanel DesiredColumnWidth="220"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
